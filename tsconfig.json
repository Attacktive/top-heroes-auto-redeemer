{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
